<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/itemListLocalizacionImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
             />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/itemListLocalizacionImage" >

            <TextView
                android:id="@+id/itemListLocalizacionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp" />
            
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemListLocalizacionName" >

            <TextView
                android:id="@+id/itemListLocalizacionVenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp" />
            
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemListLocalizacionVenue" >
            
				<TextView
                android:id="@+id/itemListLocalizacionVerMapa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver Mapa"
                android:textStyle="italic"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp" />
           
        </RelativeLayout>
        </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>