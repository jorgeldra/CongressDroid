<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/layoutPaper1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/labelSessionName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sesión:"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sessionName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:textColor="#000000"
                        android:textIsSelectable="false" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutPaper2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layoutPaper1"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/labelSessionDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descripción:"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sessionDescription"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:textColor="#000000"
                        android:textIsSelectable="false" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutPaper11"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layoutPaper2"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/labelDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha:"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sessionDate"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:textColor="#000000"
                        android:textIsSelectable="false" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutPaper3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layoutPaper11"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/labelSessionHour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hora:"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sessionHour"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:textColor="#000000"
                        android:textIsSelectable="false" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutPaper4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layoutPaper3"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/labelSessionLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Localización:"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sessionLocation"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:paddingLeft="10px"
                        android:textColor="#000000"
                        android:textIsSelectable="false" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutPaper12"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layoutPaper4"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" >

                    <ImageButton
                        android:id="@+id/sessionLocationMap"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/location_map" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutPaper5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layoutPaper12"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/labelSessionModerador"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Moderador:"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sessionModerador"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:textColor="#000000"
                        android:textIsSelectable="false" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutPaper6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layoutPaper5"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/labelSessionComentarios"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comentarios:"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sessionComentarios"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:textColor="#000000"
                        android:textIsSelectable="false" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutPaper7"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layoutPaper6"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/labelTrabajoTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Titulo de Trabajo:"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/trabajoTitulo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:textColor="#000000"
                        android:textIsSelectable="false" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutPaper8"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layoutPaper7"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/labelTrabajoTexto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resumen:"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/trabajoTexto"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:textColor="#000000"
                        android:textIsSelectable="false" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutPaper9"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layoutPaper8"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/labelTrabajoKeyWords"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keywords:"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/trabajoKeywords"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:textColor="#000000"
                        android:textIsSelectable="false" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutPaper10"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layoutPaper9"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/labelTrabajoAuthors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Autores:"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <ListView
                        android:id="@+id/listaAutores"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >
                    </ListView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#111"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</android.support.v4.widget.DrawerLayout>
