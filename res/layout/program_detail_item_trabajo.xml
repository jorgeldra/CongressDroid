<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layoutProgramDetailItem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#DF013A"
        android:orientation="horizontal"
        android:textColor="#ffffff" >

        <TextView
            android:id="@+id/itemTitleTrabajo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.84"
            android:background="#DF013A"
            android:clickable="true"
            android:textColor="#ffffff"
           
             />

        <ImageButton
            android:id="@+id/itemCreateAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/device_access_alarms"
            android:textColor="#ffffff" />

        <ImageButton
            android:id="@+id/itemAddFavourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rating_not_important"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>